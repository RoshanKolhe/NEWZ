<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NEWZ" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/flat_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="successtoast">
        <item name="stColorBackground">#53C479</item>
        <item name="stTextBold">true</item>
        <item name="stTextColor">#FFFFFF</item>
        <item name="stRadius">1dp</item>
        <item name="stLength">LONG</item>
        <item name="stIconStart">@drawable/prizelogowhite</item>
    </style>
    <style name="errortoast">
        <item name="stColorBackground">#E15F65</item>
        <item name="stTextBold">true</item>
        <item name="stTextColor">#FFFFFF</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">1dp</item>
    </style>
    <style name="warningtoast">
        <item name="stColorBackground">#F6BB42</item>
        <item name="stTextBold">true</item>
        <item name="stTextColor">#FFFFFF</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">1dp</item>
        <item name="stIconStart">@drawable/ic_warning</item>
    </style>
</resources>