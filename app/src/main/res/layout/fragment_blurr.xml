<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".BlurrFragment">


    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:padding="5dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:background="@drawable/ic_back" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="250dp"
        android:layout_height="53dp"
        android:background="@drawable/gradient_btn"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:padding="15dp"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_prof"
        android:drawablePadding="59dp"
        android:text="Profile" />

    <TextView
        android:id="@+id/wallet"
        android:layout_width="250dp"
        android:layout_height="53dp"
        android:background="@drawable/gradient_btn"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:padding="15dp"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_wallet"
        android:drawablePadding="59dp"
        android:text="Wallet" />

    <TextView
        android:id="@+id/tasks"
        android:layout_width="250dp"
        android:layout_height="53dp"
        android:background="@drawable/gradient_btn"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:padding="15dp"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_task"
        android:drawablePadding="59dp"
        android:text="Tasks" />

    <TextView
        android:id="@+id/bookmarks"
        android:layout_width="250dp"
        android:layout_height="53dp"
        android:background="@drawable/gradient_btn"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:padding="15dp"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_bookmarks"
        android:drawablePadding="59dp"
        android:text="Bookmarks" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:background="@drawable/gradient_btn"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:padding="14dp"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_logout"
        android:layout_marginBottom="20dp"
        android:drawablePadding="59dp"
        android:text="Logout" />




</LinearLayout>