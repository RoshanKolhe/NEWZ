<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flat_blue"
    tools:context=".PasswordReset">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="90dp"
        android:background="@drawable/backrec2">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:transitionName="logo_anim"
            android:layout_toLeftOf="@id/title"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@mipmap/newzlogo" />

        <ImageView
            android:id="@+id/title"
            android:layout_width="90dp"
            android:layout_height="50dp"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/roboto"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/newz"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:transitionName="title_anim" />


        <TextView
            android:layout_below="@+id/title"
            android:id="@+id/textView18"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="Enter Your New Password" />

        <EditText
            android:id="@+id/rpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:layout_marginTop="150dp"
            android:background="@drawable/blue_orange_edittext"
            android:padding="8dp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/crpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="229dp"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blue_orange_edittext"
            android:padding="8dp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/rsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:background="@drawable/ripple_white_blue"
            android:padding="8dp"
            android:textColor="@color/flat_blue"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:text="Reset Password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crpassword" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rsubmit"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:text="For Any Queries Contact Us"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:text="newz.console@gmail.com"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>