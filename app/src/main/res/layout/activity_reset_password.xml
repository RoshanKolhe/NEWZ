<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flat_blue"
    tools:context=".ResetPassword">

    <RelativeLayout
        android:layout_marginVertical="90dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/backrec2"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:transitionName="logo_anim"
            android:layout_toLeftOf="@id/title"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@mipmap/newzlogo" />

        <ImageView
            android:id="@+id/title"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/roboto"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/newz"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:transitionName="title_anim" />

        <TextView
            android:layout_below="@+id/title"
            android:id="@+id/textView18"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:layout_centerInParent="true"
            android:text="Enter OTP Received On Your Registered E-Mail Address" />

        <TextView
            android:layout_below="@+id/textView18"
            android:id="@+id/textView19"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="DO NOT SHARE YOUR OTP" />

        <EditText
            android:padding="8dp"
            android:background="@drawable/blue_orange_edittext"
            android:id="@+id/otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            android:textAlignment="center"
            android:hint="Enter OTP"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="number"
            android:textSize="20dp"
            android:textColorHint="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button

            android:id="@+id/verify"
            android:layout_marginTop="280dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_white_blue"
            android:text="Verify"
            android:layout_centerHorizontal="true"
            android:textColor="@color/flat_blue"
            />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verify"
            android:layout_marginTop="60dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:text="For Any Queries Contact Us"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:text="newz.console@gmail.com"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>