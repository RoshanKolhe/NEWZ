<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Tasks">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Tasks : "
        android:textColor="@color/gray"
        android:textSize="22sp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_task_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/min5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/flat_blue"
            android:textSize="18sp"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_task"
            android:drawablePadding="30dp"
            android:text="Read News/Articles For 5 Minutes To Earn 5 points" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/min10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/flat_blue"
            android:textSize="18sp"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_task"
            android:drawablePadding="30dp"
            android:text="Read News/Articles For 10 Minutes To Earn 10 points" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/min15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/flat_blue"
            android:textSize="18sp"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_task"
            android:drawablePadding="30dp"
            android:text="Read News/Articles For 15 Minutes To Earn 15 points" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/min20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/flat_blue"
            android:textSize="18sp"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_task"
            android:drawablePadding="30dp"
            android:text="Read News/Articles For 20 Minutes To Earn 20 points" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Tasks : "
        android:textColor="@color/orange"
        android:textSize="22sp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textAlignment="center"
            android:textSize="13sp"
            android:visibility="visible"
            android:text="Loading Special Task For You Please Wait !" />

        <ProgressBar
            android:indeterminateTint="@color/flat_blue"
            android:id="@+id/progressBart"
            android:layout_gravity="center"
            android:visibility="visible"
            style="?android:attr/progressBarStyle"
            android:layout_width="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/stask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:textSize="18sp"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:visibility="gone"
            android:drawableStart="@drawable/ic_play"
            android:drawablePadding="30dp"
            android:text= "Watch Video Ad To Earn 5 points" />

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/divider"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        android:layout_height="2dp"
        android:backgroundTint="@color/gray"
        android:background="?android:attr/listDivider" />

    <TextView
        android:textAlignment="center"
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:textSize="12dp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:text="For Any Queries or Feedback Contact us newz.console@gmail.com" />

</LinearLayout>