<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E90FF"
    tools:context=".Login">

    <ImageView
        android:id="@+id/background"
        android:layout_width="550dp"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:transitionName="back"
        app:srcCompat="@drawable/backg_log" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:transitionName="logo_anim"
        android:layout_toLeftOf="@id/title"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/background"
        app:srcCompat="@mipmap/newzlogo" />

    <ImageView
        android:id="@+id/title"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/newz"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:transitionName="title_anim" />


    <TextView
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Short News &amp; Positive Articles For You !  "
        android:textAlignment="center"
        android:textColor="#FA8231"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="301dp"
        android:layout_height="50dp"
        android:background="@drawable/blue_orange_edittext"
        android:drawableStart="@drawable/custom_email_ic"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter Email/Phone Number.."
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:layout_below="@+id/tagline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="301dp"
        android:layout_height="50dp"
        android:background="@drawable/blue_orange_edittext"
        android:drawableStart="@drawable/custom_lock_ic"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter Password.."
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:background="@drawable/ripple_white_blue"
        android:backgroundTint="@null"
        android:text="Submit"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/password"
        android:layout_below="@+id/password"
        />

    <TextView
        android:id="@+id/createnewacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:textColor="#FA8231"
        android:textSize="18sp"
        android:layout_below="@+id/submit"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/submit"
        />

    <TextView
        android:id="@+id/forgetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password ?"
        android:textColor="@color/black"
        android:layout_below="@+id/createnewacc"
        android:layout_marginTop="8dp"
        android:layout_alignRight="@+id/createnewacc"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Make In India Initiative"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/background"
        />


</RelativeLayout>